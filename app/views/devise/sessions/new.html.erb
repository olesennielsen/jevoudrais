<div class="jevoudrais-login">
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical', :id => 'sign-in-form' }) do |f| %>
  <%= f.input :email, :autofocus => true %>
  <%= f.input :password %>
  <%= f.button :submit, "Sign in", :class => 'btn-primary btn-large' %>
<% end %>
<button id="show-sign-in-form" class="btn btn-primary btn-large">Sign in</button>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical', :id => 'sign-up-form' }) do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors resource %>
  <%= f.input :name, :autofocus => true %>
  <%= f.input :email, :required => true %>
	<%= f.input :birthday, :required => true %>
  <%= f.input :password, :required => true %>
  <%= f.input :password_confirmation, :required => true %>
  <%= f.button :submit, 'Sign up', :class => 'btn-primary btn-large' %>
<% end %>

<button id="show-sign-up-form" class="btn btn-primary btn-large">Sign up</button>

<br />
<br />
<br />
<br />
<p class="pull-right"><%= link_to "Forgot your password?", new_password_path(resource_name) %></p><br /><br />
</div>

